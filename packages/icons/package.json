{
  "name": "@reluna-ui/icons",
  "version": "0.1.0",
  "description": "Icon wrapper components using Lucide Icons",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "tsup src/index.ts --format esm,cjs --dts --external react --external react-dom --external lucide-react",
    "dev": "tsup src/index.ts --format esm,cjs --watch --dts --external react --external react-dom --external lucide-react",
    "clean": "rm -rf dist"
  },
  "peerDependencies": {
    "react": "^18.0.0",
    "react-dom": "^18.0.0",
    "lucide-react": "^0.400.0"
  },
  "devDependencies": {
    "@types/react": "^18.3.0",
    "@types/react-dom": "^18.3.0",
    "tsup": "^8.0.0",
    "typescript": "^5.4.0"
  },
  "publishConfig": {
    "access": "public"
  },
  "keywords": [
    "icons",
    "lucide",
    "react",
    "design-system"
  ],
  "license": "MIT"
}
